{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "backend-start",
      "type": "shell",
      "command": "python",
      "args": ["backend/media_grabber_web.py"],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*(Running on|WARNING).*$",
          "endsPattern": "^.*(Keyboard interrupt|Press CTRL).*$"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "frontend-start",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*VITE.*$",
          "endsPattern": "^.*(Press q to quit).*$"
        }
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "install-dependencies",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "echo '=== Installing Backend Dependencies ===' && pip install -e . && echo '=== Installing Frontend Dependencies ===' && cd frontend && npm install && echo '=== Installation Complete ==='"
      ],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "build-frontend",
      "type": "shell",
      "command": "npm",
      "args": ["run", "build"],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "test-backend",
      "type": "shell",
      "command": "python",
      "args": ["-m", "pytest", "backend/", "-v"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "lint-backend",
      "type": "shell",
      "command": "ruff",
      "args": ["check", "backend/"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "docker-build",
      "type": "shell",
      "command": "docker",
      "args": ["build", "-t", "mediagrabber", "."],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "docker-run",
      "type": "shell",
      "command": "docker",
      "args": ["run", "-p", "8080:8080", "mediagrabber"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "problemMatcher": []
    }
  ]
}
